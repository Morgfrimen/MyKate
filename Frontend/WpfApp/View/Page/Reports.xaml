<Page x:Class="WpfApp.View.Page.Reports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.View.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reports">
    <Page.CommandBindings>
        <CommandBinding Command="{x:Static local:Reports.NavigateReport31}"
                        Executed="CommandBinding_OnExecuted"/>
    </Page.CommandBindings>

    <WrapPanel  Orientation="Vertical"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Padding" Value="10,5" />
                <Setter Property="Margin" Value="10,5" />
            </Style>
        </WrapPanel.Resources>
        <Button Content="Отчет форма З-1"
                Command="{x:Static local:Reports.NavigateReport31}"/>
        <Button Content="Отчет форма З-2"/>
        <Button Content="Отчет форма З-3"/>
        <Button Content="Отчет форма З-4"/>
    </WrapPanel>
</Page>
