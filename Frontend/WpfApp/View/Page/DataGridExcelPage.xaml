<Page x:Class="WpfApp.View.Page.DataGridExcelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d"
      FontSize="10"
      d:DesignHeight="500" d:DesignWidth="800"
      MinHeight="350"
      MinWidth="700"
      xmlns:gpzCurrentYear="clr-namespace:WpfApp.Models.GPZCurrentYear"
      xmlns:simplepresent="clr-namespace:WpfApp.Models"
      Title="DataGridExcelPage">
    <Page.Resources>
        <Thickness x:Key="ThicknessHeaderRightAndBottom" Bottom="1" Right="1" />
        <Thickness x:Key="ThicknessHeaderOnlyBottom" Bottom="1" />
        <Thickness x:Key="ThicknessHeaderOnlyRight" Right="1" />
        <Thickness x:Key="DefaultPadding" Top="15" Bottom="15" />
        <sys:Double x:Key="MaxHeightGridHeaderDataGrid">250</sys:Double>
        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment"
                    Value="Stretch" />
            <Setter Property="TextAlignment"
                    Value="Center" />
            <Setter Property="Padding"
                    Value="10,5" />
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="TextWrapping"
                    Value="Wrap" />
        </Style>

        <Style TargetType="Border">
            <Setter Property="BorderBrush"
                    Value="Black" />
        </Style>
    </Page.Resources>

    <Grid>
        <DataGrid AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  Background="White">
            <!--#region TODO: ВЫНЕСТИ В ОТДЕЛЬНЫЙ ФАЙЛ -->
            <DataGrid.ItemsSource>
                <x:Array Type="gpzCurrentYear:RowModels">
                    <gpzCurrentYear:RowModels Name="Муво 1"
                                              Id="1">
                        <gpzCurrentYear:RowModels.FirstColumnSap>
                            <gpzCurrentYear:SapPresent>
                                <gpzCurrentYear:SapPresent.First>
                                    <simplepresent:CountAndSum Count="10"
                                                               PriceRow="100" />
                                </gpzCurrentYear:SapPresent.First>
                                <gpzCurrentYear:SapPresent.Second>
                                    <simplepresent:CountAndSum Count="6"
                                                               PriceRow="235" />
                                </gpzCurrentYear:SapPresent.Second>
                            </gpzCurrentYear:SapPresent>
                        </gpzCurrentYear:RowModels.FirstColumnSap>
                        <gpzCurrentYear:RowModels.FirstQuarter>
                            <gpzCurrentYear:Quarter>
                                <gpzCurrentYear:Quarter.AddFirst>
                                    <simplepresent:CountAndSum Count="10"
                                                               PriceRow="16000" />
                                </gpzCurrentYear:Quarter.AddFirst>
                                <gpzCurrentYear:Quarter.AddSecond>
                                    <simplepresent:CountAndSum Count="25"
                                                               PriceRow="274000" />
                                </gpzCurrentYear:Quarter.AddSecond>
                            </gpzCurrentYear:Quarter>
                        </gpzCurrentYear:RowModels.FirstQuarter>
                        <gpzCurrentYear:RowModels.SecondQuarter>
                            <gpzCurrentYear:Quarter>
                                <gpzCurrentYear:Quarter.AddFirst>
                                    <simplepresent:CountAndSum Count="10"
                                                               PriceRow="16000" />
                                </gpzCurrentYear:Quarter.AddFirst>
                                <gpzCurrentYear:Quarter.AddSecond>
                                    <simplepresent:CountAndSum Count="25"
                                                               PriceRow="274000" />
                                </gpzCurrentYear:Quarter.AddSecond>
                            </gpzCurrentYear:Quarter>
                        </gpzCurrentYear:RowModels.SecondQuarter>
                        <gpzCurrentYear:RowModels.TreeQuarter>
                            <gpzCurrentYear:Quarter>
                                <gpzCurrentYear:Quarter.AddFirst>
                                    <simplepresent:CountAndSum Count="10"
                                                               PriceRow="16000" />
                                </gpzCurrentYear:Quarter.AddFirst>
                                <gpzCurrentYear:Quarter.AddSecond>
                                    <simplepresent:CountAndSum Count="25"
                                                               PriceRow="274000" />
                                </gpzCurrentYear:Quarter.AddSecond>
                            </gpzCurrentYear:Quarter>
                        </gpzCurrentYear:RowModels.TreeQuarter>
                        <gpzCurrentYear:RowModels.FourthQuarter>
                            <gpzCurrentYear:Quarter>
                                <gpzCurrentYear:Quarter.AddFirst>
                                    <simplepresent:CountAndSum Count="3"
                                                               PriceRow="1" />
                                </gpzCurrentYear:Quarter.AddFirst>
                                <gpzCurrentYear:Quarter.AddSecond>
                                    <simplepresent:CountAndSum Count="4"
                                                               PriceRow="50000" />
                                </gpzCurrentYear:Quarter.AddSecond>
                            </gpzCurrentYear:Quarter>
                        </gpzCurrentYear:RowModels.FourthQuarter>
                    </gpzCurrentYear:RowModels>

                </x:Array>
            </DataGrid.ItemsSource>
            <!--#endregion-->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background"
                            Value="Transparent" />
                    <Setter Property="MinHeight"
                            Value="50" />
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <Grid />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridColumnHeader">
                                <Border BorderThickness="0.5,1"
                                        BorderBrush="Black">
                                    <ContentPresenter HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="5*" MinWidth="50">
                    <DataGridTemplateColumn.HeaderTemplate>
                        <DataTemplate>
                            <Grid MaxHeight="{StaticResource MaxHeightGridHeaderDataGrid}">
                                <Grid.Resources>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                        <Setter Property="TextWrapping"
                                                Value="Wrap" />
                                        <Setter Property="TextAlignment"
                                                Value="Center" />
                                        <Setter Property="VerticalAlignment"
                                                Value="Center" />
                                    </Style>
                                    <Style TargetType="Border" BasedOn="{StaticResource {x:Type Border}}">
                                        <Setter Property="BorderBrush"
                                                Value="Black" />
                                        <Setter Property="Padding"
                                                Value="{StaticResource DefaultPadding}" />
                                    </Style>
                                </Grid.Resources>
                                <TextBlock Text="Название МУВО" />
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.HeaderTemplate>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource {x:Type Border}}"
                                    BorderThickness="1,0,0,0">
                                <TextBlock Text="{Binding Name}"
                                       Style="{StaticResource {x:Type TextBlock}}" />
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="25*">
                    <DataGridTemplateColumn.HeaderTemplate>
                        <DataTemplate>
                            <Grid Height="{StaticResource MaxHeightGridHeaderDataGrid}">
                                <Grid.Resources>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                        <Setter Property="TextWrapping"
                                                Value="Wrap" />
                                        <Setter Property="TextAlignment"
                                                Value="Center" />
                                        <Setter Property="VerticalAlignment"
                                                Value="Center" />
                                    </Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush"
                                                Value="Black" />
                                        <Setter Property="Padding"
                                                Value="{StaticResource DefaultPadding}" />
                                    </Style>
                                </Grid.Resources>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="4"
                                        BorderThickness="{StaticResource ThicknessHeaderOnlyBottom}">
                                    <TextBlock Text="Действующие договоры прошлых периодов для позиций SAP SRM" />
                                </Border>
                                <Border Grid.Row="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        BorderThickness="{StaticResource ThicknessHeaderRightAndBottom}">
                                    <TextBlock
                                        Text="на 01.01.2021" />
                                </Border>
                                <Border Grid.Row="2"
                                        Grid.Column="2"
                                        Grid.ColumnSpan="2"
                                        BorderThickness="{StaticResource ThicknessHeaderOnlyBottom}">
                                    <TextBlock
                                        Text="на 31.12.2021 по последнему отчету" />
                                </Border>
                                <Border Grid.Row="3"
                                        Grid.Column="0"
                                        BorderThickness="{StaticResource ThicknessHeaderOnlyRight}">
                                    <TextBlock
                                        Text="к-во" />
                                </Border>
                                <Border Grid.Row="3"
                                        Grid.Column="1"
                                        BorderThickness="{StaticResource ThicknessHeaderOnlyRight}">
                                    <TextBlock
                                        Text="сумма (рублей)" />
                                </Border>
                                <Border Grid.Row="3"
                                        Grid.Column="2"

                                        BorderThickness="{StaticResource ThicknessHeaderOnlyRight}">
                                    <TextBlock
                                        Text="к-во" />
                                </Border>
                                <Border Grid.Row="3"
                                        Grid.Column="3">
                                    <TextBlock
                                        Text="сумма (рублей)" />
                                </Border>

                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.HeaderTemplate>
                    <DataGridTemplateColumn.CellTemplate>
