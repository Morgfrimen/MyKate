                                    <TextBlock
                                        Text="сумма (рублей)" />
                                </Border>

                                <!--#endregion-->


                                <!--#region  2 Квартал -->

                                <Border Grid.Row="1"
                                        Grid.Column="4"
                                        Grid.ColumnSpan="4"
                                        Background="Yellow"
                                        BorderThickness="{StaticResource ThicknessHeaderRightAndBottom}">
                                    <TextBlock Text="2 квартал"
                                               FontWeight="Bold" />
                                </Border>

                                <Border Grid.Row="2"
                                        Grid.Column="4"
                                        Grid.ColumnSpan="2"
                                        BorderThickness="{StaticResource ThicknessHeaderRightAndBottom}">
                                    <TextBlock Text="добавлено позиций" />
                                </Border>

                                <Border Grid.Row="2"
