                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition MinHeight="25" />
                                </Grid.RowDefinitions>
                                <Border Grid.Column="0"
                                        Style="{StaticResource {x:Type Border}}"
                                        BorderThickness="{StaticResource ThicknessHeaderOnlyRight}">
                                    <TextBlock
                                        Style="{StaticResource {x:Type TextBlock}}"
                                        Text="{Binding FirstColumnSap.First.Count}" />
                                </Border>
                                <Border Grid.Column="1"
                                        Style="{StaticResource {x:Type Border}}"
                                        BorderThickness="{StaticResource ThicknessHeaderOnlyRight}">
                                    <TextBlock
                                        Style="{StaticResource {x:Type TextBlock}}"
                                        Text="{Binding FirstColumnSap.First.PriceRow}" />
                                </Border>
                                <Border Grid.Column="2"
                                        Style="{StaticResource {x:Type Border}}"
                                        BorderThickness="{StaticResource ThicknessHeaderOnlyRight}">
                                    <TextBlock
                                        Style="{StaticResource {x:Type TextBlock}}"
                                        Text="{Binding FirstColumnSap.Second.Count}" />
                                </Border>
                                <Border Grid.Column="3"
                                        Style="{StaticResource {x:Type Border}}">
                                    <TextBlock
                                        Style="{StaticResource {x:Type TextBlock}}"
                                        Text="{Binding FirstColumnSap.Second.PriceRow}" />
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

